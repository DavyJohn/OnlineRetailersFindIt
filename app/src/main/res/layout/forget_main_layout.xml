<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="手机号"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
            <com.zzh.findit.widget.ClearEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="phone"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="16sp"
                android:id="@+id/forget_username"
                android:layout_marginLeft="15dp"
                android:hint="请输入您的注册手机号"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp">
                <Button
                    android:id="@+id/forget_code_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/login_button_shape"
                    android:text="获取验证码"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/boot_view"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="验证码"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
            <com.zzh.findit.widget.ClearEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="number"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:id="@+id/forget_et_pw"
                android:layout_marginLeft="15dp"
                android:hint="请输入手机验证码"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/forget_next_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_button_shape"
        android:text="下一步"
        android:textSize="16sp"
        android:textColor="@color/white" />
</LinearLayout>